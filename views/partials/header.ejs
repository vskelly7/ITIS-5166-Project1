<header id="header">
	<div id="logo-container">
		<a id="logo" href="/"
			><img src="/img/logoWC.jpg" alt="Wanderers Club Logo"
		/></a>
	</div>
	<div id="page-title">
		<h1>Wanderers Club</h1>
	</div>
	<div id="user-nav">
		<nav>
			<ul>
				<div>

					[% if (user) { %]

					<li>
						[% if (title === 'new event') { %]
						<a href="/events/new" class="active">New Event</a>
						[% } else { %]
						<a href="/events/new">New Event</a>
						[% } %]
					</li>

					<li><a href = '/users/profile'>[%=event.host.firstName%]'s Profile</a></li>

					<li><a href="/users/logout">Log Out</a></li>

					[% } else { %]

					<li>
						[% if (title === 'login') { %]
						<a href="/users/login" class="active">Log In</a>
						[% } else { %]
						<a href="/users/login">Log In</a>
						[% } %]
					</li>
					<li>
						[% if (title === 'new user') { %]
						<a href="/users/new" class="active">Sign Up</a>
						[% } else { %]
						<a href="/users/new">Sign Up</a>
						[% } %]
					</li>

					[% } %]
				</div>
			</ul>
		</nav>
	</div>
</header>

[%if(errorMessages.length > 0) { errorMessages.forEach(message=>{%]
<div class="error">[%=message%]</div>
[% }); }%] [%if(successMessages.length > 0) {
successMessages.forEach(message=>{%]
<div class="success">[%=message%]</div>
[% }); }%]
